    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.MainShell.FlyoutHeader"
    Title="FlyoutHeader"
    HeightRequest="100">

    <Grid ColumnDefinitions="50,*">

        <Image Source="dotnet_bot.png"  Grid.Column="0"
